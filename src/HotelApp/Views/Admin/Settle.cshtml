@model HotelApp.Models.AdminViewModel.SettleViewModel
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Admin" asp-action="Settle" method="post" asp-route-id="@(Model.Apartment.Id)"  asp-route-name="@(User.Identity.Name)" class="form-horizontal">
                <h4>@Model.Visitor book room </h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div  class="form-group">
                    <label class="col-md-2 control-label">Appartment № </label>
                    <div class="col-md-10">
                        <input asp-for="@Model.Apartment.Name"  disabled class="form-control" />
                    </div>
                </div>
        
                <div class="form-group">
                    <label class="col-md-2 control-label">Arrival date </label>
                    <div class="col-md-10">
                        <input asp-for="@Model.Apartment.ArrivalDate" id='datetimepicker1' type='text' class="form-control" />
                        <span asp-validation-for="@Model.Apartment.ArrivalDate" class="text-danger"></span>
                    </div>
                </div>
                <script type="text/javascript">
                          $(function () {
                              $('#datetimepicker1').datetimepicker({
                                  format:"YYYY-MM-DDTHH:mm:ss"
                              });
                          });
                </script>
                <div class="form-group">
                    <label class="col-md-2 control-label">Date Of departure</label>
                    <div class="col-md-10">
                        <input asp-for="@Model.Apartment.DateOfDeparture" id='datetimepicker2' type='text' class="form-control" />
                        <span asp-validation-for="@Model.Apartment.DateOfDeparture" class="text-danger"></span>
                    </div>
                </div>
                <script type="text/javascript">
                            $('#datetimepicker2').datetimepicker({
                                format: "YYYY-MM-DDTHH:mm:ss"
                            });
                </script>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">OK</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>