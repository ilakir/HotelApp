@model HotelApp.Models.DataModels.Apartment
<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
 
        </div>
        <div class="col-sm-8 text-left">
            <h1>Goodbye</h1>
            <p>Mr. @Model.Visitor, you have been with us @(Model.DateOfDeparture.Day*24+Model.DateOfDeparture.Hour-Model.ArrivalDate.Day*24+Model.ArrivalDate.Hour) hour(s)</p>
            <h3>The total amount of payment: @Model.FinalPrice </h3>
            <h4>Thank you for visiting. We are waiting for you again.</h4>
            <div>
                <form asp-controller="Reception" asp-action="Eviction" asp-route-apartmentId="@(Model.Id)" method="post">
                    <div class="form-group">
                        <input type="submit" class="btn btn-default" value="Ok" />
                    </div>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>
